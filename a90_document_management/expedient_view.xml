<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="expedient_tree_add_field" model="ir.ui.view">
            <field name="name">expedient.tree.add.field</field>
            <field name="model">expedient</field>
            <field name="inherit_id" ref="document_management.expedient_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="wzd_name"/>
                    <!--<field name="parent_expedient"/>-->
                </field>
        <field name="name" position="before">
          <field name="name_origin_model"/>
          <field name="date_origin_model"/>
          <field name="partner_name_expedient"/>
        </field>
            </field>
        </record>

        <record id="expedient_form_add_field" model="ir.ui.view">
            <field name="name">expedient.form.add.field</field>
            <field name="model">expedient</field>
            <field name="inherit_id" ref="document_management.expedient_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="prototipe_barcode" position="after">
                    <field name="wzd_name"/>
                    <field name="name_origin_model"/>
                  <!--  <field name="parent_expedient"/>-->


                </field>
                 <!--<page string="Attachments" position="after">
                     <page string =" Childs expedients">
                        <field name="child_expedient_ids" widget="one2many" nolabel="1"/>
                     </page>
                 </page>-->
                  <button name="create_final_expedient" position="replace">
                  <button name="create_final_expedient" string="Create final expedient"
                                    type="object" icon="gtk-go-forward" attrs="{'invisible': ['|',('state','=','created'),'|',('state','=','incomplete'),'|',('state','=','finalized'),('state','=','printed')]}"/>
                  </button>
            </field>
        </record>

        <record id="expedient_search_add_field" model="ir.ui.view">
            <field name="name">expedient.search.add.field</field>
            <field name="model">expedient</field>
            <field name="inherit_id" ref="document_management.expedient_search"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="wzd_name"/>
            <field name="name_origin_model"/>
                    <!--<field name="parent_expedient"/>-->
                </field>
            </field>
        </record>
    </data>
</openerp>
