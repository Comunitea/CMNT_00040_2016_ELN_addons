<?xml version="1.0"?>
<openerp>
    <data>
         <record id="action_picking_planning_kanban" model="ir.actions.act_window">
            <field name="name">Planning Delivery Orders</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('picking_type_code','=','outgoing'), ('state', '!=', 'cancel')]</field>
            <field name="context">{'search_default_available':1, 'search_default_waiting':1, 'update_routes':1}</field>
            <!--field name="context">{'default_type': 'out', 'contact_display': 'partner_address', 'search_default_todaytwo':1}</field-->
            <field name="search_view_id" ref="eln_custom.view_picking_planning_kanban_search"/>
        </record>


         <record id="view_picking_type_form_wwave_route_link" model="ir.ui.view">
            <field name="name">Picking Types</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='return_picking_type_id']" position="after">
                    <field name="wave_route_link"/>

                </xpath>
            </field>
        </record>

        <record id="stock_picking_kanban_wave_id" model="ir.ui.view">
            <field name="name">stock.picking.kanban.wave</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="eln_custom.stock_picking_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='backorder_id']" position="after">
                    <field name="wave_id"/>
                </xpath>
                <xpath expr="//div[@t-if='record.requested_date.raw_value']" position="after">
                    <div t-if="record.wave_id.raw_value">
                       <b>
                           <field name="wave_id"/>
                       </b>
                    </div>
                </xpath>
            </field>
        </record>



    </data>
</openerp>