                    <field name="color_stock"/>
                    <field name="routing_id"/>
                    <templates>
                        <t t-name="production_workcenter_line_details">
                            <ul class="oe_kanban_tooltip">
                                <li><b>Product: </b> <field name="product"/></li>
                            </ul>
                        </t>
