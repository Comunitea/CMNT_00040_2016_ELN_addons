<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="view_picking_out_form_add_supplier" model="ir.ui.view">
            <field name="name">stock.picking.out.form.add_supplier</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="supplier_id"/>
                    <field name="carrier_id"/>
                   <field name="supplier_cip"/>
                </field>
                <field name="min_date" position="after">
                    <field name="commitment_date"/>
                </field>
            </field>
        </record>
        
        <record id="view_move_tree_add_supplier" model="ir.ui.view">
            <field name="name">stock.move.tree.add_supplier</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_tree"/>
            <field name="type">tree</field>
            <field eval="6" name="priority"/>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="supplier_id"/>
                </field>
            </field>
        </record>

        <record id="view_move_form_add_supplier" model="ir.ui.view">
            <field name="name">stock.move.form.add_supplier</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="type">form</field>
            <field eval="4" name="priority"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="supplier_id"/>
                </field>
            </field>
        </record>

        <record id="view_move_search_add_supplier" model="ir.ui.view">
            <field name="name">stock.move.search.add_supplier</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_search"/>
            <field name="type">search</field>
            <field eval="3" name="priority"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="supplier_id"/>
                </field>
                <filter name="groupby_date" position="after">
                    <separator orientation="vertical"/>
                    <filter string="Partner" name="groupby_partner" icon="terp-personal" domain="[]" context="{'group_by':'partner_id'}"/>
                    <filter string="Supplier" name="groupby_supplier" icon="terp-personal" domain="[]" context="{'group_by':'supplier_id'}"/>
                </filter>
            </field>
        </record>

        <record id="view_picking_out_form_elnsale" model="ir.ui.view">
            <field name="name">stock.picking.out.form.elnsale</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="client_order_ref"/>
                </field>
            </field>
        </record>


        <record id="view_picking_out_search" model="ir.ui.view">
            <field name="name">stock.picking.out.search</field>
            <field name="model">stock.picking</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search" />
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <filter icon="terp-check" string="Direct Invoicing" domain="['|',('sale_id.shop_id.indirect_invoicing','=',False), ('sale_id','=',False)]"/>
                    <filter icon="terp-check" string="Indirect Invoicing" domain="[('sale_id.shop_id.indirect_invoicing','=',True)]"/>
                    <!--
                    SE COMENTA PORQUE NO FUNCIONA LA BÚSQUEDA CON LOS FILTRO SASÏ
                    newline/>
                    <field name="name" filter_domain="['|', ('name','ilike',self),('client_order_ref','ilike',self)]"/-->
                </field>
            </field>
        </record>

    </data>
</openerp>