<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>    
        <record id="view_stock_picking_in_form_custom" model="ir.ui.view">
            <field name="name">stock.picking.in.form.custom</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="purchase.stock_picking_in_inherit_purchase"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="purchase_id" position="after">
                    <field name="container_numbers" />
                </field>
            </field>
        </record>

        <record id="view_warehouse_form_add_good_warehouse" model="ir.ui.view">
            <field name="name">view_warehouse_form_add_good_warehouse</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse" />
            <field eval="16" name="priority"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="good_warehouse"/>
                </field>
            </field>
        </record>

        <record id="view_warehouse_tree_add_good_warehouse" model="ir.ui.view">
            <field name="name">view_warehouse_tree_add_good_warehouse</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse_tree" />
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="partner_address_id" position="after">
                    <field name="good_warehouse"/>
                </field>
            </field>
        </record>

        <record id="view_picking_in_form" model="ir.ui.view">
            <field name="name">stock.picking.in.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="warehouse_id" invisible="0"/>
                </field>
            </field>
        </record>

        <record id="view_picking_in_tree" model="ir.ui.view">
            <field name="name">stock.picking.in.tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_in_tree"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="origin" position="before">
                    <field name="warehouse_id" invisible="0"/>
                </field>
            </field>
        </record>

        <record id="view_picking_in_search" model="ir.ui.view">
            <field name="name">stock.picking.in.search</field>
            <field name="model">stock.picking</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="stock.view_picking_in_search" />
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <newline/>
                    <field name="name"/>
                </field>
                <field name="origin" position="after">
                    <field name="warehouse_id" widget="selection"/>
                </field>
            </field>
        </record>

    </data>
</openerp>