                <field name="invoiced" position="replace">
                    <group col="4" colspan="2">
                        <field name="date_order"/>
                        <field name="invoiced"/>
                        <!-- <field name="commitment_date"/> -->
                        <!--  <field name="shipped"/> -->
                    </group>
              </field>
            </field>
        </record> 

