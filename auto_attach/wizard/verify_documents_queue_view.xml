<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="view_verify_documents_queue_wizard" model="ir.ui.view">
            <field name="name">Verify documents queue</field>
            <field name="model">verify.document.queue.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Document queue Verified">
                    <label align="0.0" string="The document queue has been verified." colspan="4"/>
                    <group colspan="4" col="4">
                    <label align="0.0" string="All analyzed documents in the queue will be verified." colspan="4"/>
                    <label align="0.0" string="Note that this operation may take a lot of time, depending on the number of documents." colspan="4"/>
                    <label align="0.0" string="The following documents will be processed:" colspan="4"/>
                    <field name="documents" nolabel="1" colspan="4"/>
                    <newline/>
                    </group>
                    <separator string="" colspan="4" />
                    <label string="" colspan="2" />
                    <group col="2" colspan="1">
                        <button icon='gtk-cancel' special="cancel"
                            string="Cancel" />
                        <button name="act_process" string="Process"
                            colspan="1" type="object" icon="gtk-ok" />
                    </group>
                </form>
            </field>
        </record>

        <record id="verify_document_wzd" model="ir.actions.act_window">
            <field name="name">Verify documents queue</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">verify.document.queue.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>

