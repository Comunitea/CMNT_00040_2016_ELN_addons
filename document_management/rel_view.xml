<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="type_expedient_document_tree" model="ir.ui.view">
            <field name="name">type.expedient.document.tree</field>
            <field name="model">type.expedient.document</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Models required for a expedient">
                    <field name="sequence"/>
                    <field name="ir_act_report_xml_id"/>
                    <field name="valid_last"/>
                    <field name="required"/>
                   <!-- <field name="half_page"/>-->
                    <field name="attach_mode"/>
                </tree>
            </field>
        </record>

        <record id="type_expedient_document_form" model="ir.ui.view">
            <field name="name">type.expedient.document.form</field>
            <field name="model">type.expedient.document</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Models required for a expedient">
                    <group col="6" colspan="4">
                        <field name="sequence"/>
                        <field name="ir_act_report_xml_id"/>
                        <field name="valid_last"/>
                        <field name="required"/>
                        <!--<field name="half_page"/>-->
                        <field name="attach_mode"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="type_expedient_document_search" model="ir.ui.view">
            <field name="name">type.expedient.document.search</field>
            <field name="model">type.expedient.document</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Models required for a expedient">
                    <group col="8" colspan="4">
                        <field name="ir_act_report_xml_id"/>
                        <field name="valid_last"/>
                        <field name="required"/>
                        <!--<field name="half_page"/>-->
                        <field name="attach_mode"/>
                    </group>
                    <newline/>
                    <group  expand='0' string='Group by...' groups="base.group_extended">
                       <filter string='Valid the last' icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'valid_last'}" />
                       <separator orientation="vertical"/>
                       <filter string='Required' icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'required'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="expedient_document_tree" model="ir.ui.view">
            <field name="name">expedient.document.tree</field>
            <field name="model">expedient.document</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Models required for a expedient">
                    <field name="sequence"/>
                    <field name="ir_act_report_xml_id"/>
                    <field name="valid_last"/>
                    <field name="required"/>
                  <!--  <field name="half_page"/>-->
                    <field name="attach_mode"/>
                </tree>
            </field>
        </record>

        <record id="expedient_document_form" model="ir.ui.view">
            <field name="name">expedient.document.form</field>
            <field name="model">expedient.document</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Models required for a expedient">
                    <group col="6" colspan="4">
                        <field name="sequence"/>
                        <field name="ir_act_report_xml_id" colspan="4"/>
                        <newline/>
                        <field name="attach_mode"/>
                        <field name="valid_last"/>
                        <field name="required"/>
                       <!--<field name="half_page"/>-->
                    </group>
                </form>
            </field>
        </record>

        <record id="expedient_document_search" model="ir.ui.view">
            <field name="name">expedient.document.search</field>
            <field name="model">expedient.document</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Models required for a expedient">
                    <group col="8" colspan="4">
                        <field name="ir_act_report_xml_id"/>
                        <field name="valid_last"/>
                        <field name="required"/>
                       <!-- <field name="half_page"/>-->
                        <field name="attach_mode"/>
                    </group>
                    <newline/>
                    <group  expand='0' string='Group by...' groups="base.group_extended">
                       <filter string='Valid the last' icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'valid_last'}" />
                       <separator orientation="vertical"/>
                       <filter string='Required' icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'required'}" />
                    </group>
                </search>
            </field>
        </record>
    </data>
</openerp>
