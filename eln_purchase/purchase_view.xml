<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="purchase_order_tree_add_product_names" model="ir.ui.view">
            <field name="name">purchase.order.tree.add.product.names</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="lines_product_name_str"/>
                </field>
            </field>
        </record>

        <record id="purchase_order_form_view" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="container_numbers" />
                </field>
                <field name="warehouse_id" position="replace">
                    <field name="warehouse_id" on_change="onchange_warehouse_id(warehouse_id)" widget="selection" required="1"/> 
                </field>
            </field>
        </record>

        <record id="purchase_order_tree" model="ir.ui.view">
            <field name="name">purchase.order.tree</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="origin" position="before">
                    <field name="warehouse_id" invisible="1"/>
                </field>
            </field>
        </record>

        <record id="view_purchase_order_filter" model="ir.ui.view">
            <field name="name">purchase.order.list.select</field>
            <field name="model">purchase.order</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter" />
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <newline/>
                    <field name="name" string="Reference"/>
                </field>
                <field name="product_id" position="before">
                    <field name="warehouse_id" widget="selection"/>
                </field>
            </field>
        </record>

    </data>
</openerp>