<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="mrp_routing_form_picking_type" model="ir.ui.view">
            <field name="name">mrp.routing.picking.type</field>
            <field name="model">mrp.routing</field>
            <field name="inherit_id" ref="mrp.mrp_routing_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="picking_type_id"/>
                </xpath>
            </field>
        </record>
        <record id="mrp_production_picking_ids_inherit" model="ir.ui.view">
            <field name="name">mrp.production.picking_id.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@class='oe_title']" position="after">
                    <div class="oe_right">
                        <button class="oe_inline oe_stat_button" name="get_hoard" type="object"
                                icon="fa-shopping-cart" >
                            <field string="Hoard" name="hoard_len" widget="statinfo" />
                        </button>
                    </div>
</xpath>
            </field>
        </record>


    </data>
</openerp>