<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="view_product_costs_tree" model="ir.ui.view">
            <field name="name">product.costs.tree</field>
            <field name="model">product.costs.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Product Costs" colors="magenta:inventory;red:total">
                    <field name="name"/>
                    <field name="theoric_cost"/>
                    <field name="real_cost"/>
                    <field name="tc_rc_percent"/>
                    <field name="inventory" invisible="1"/>
                    <field name="total" invisible="1"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
