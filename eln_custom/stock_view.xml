<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="view_picking_out_form_replace_name" model="ir.ui.view">
            <field name="name">stock.picking.out.form.replace_name</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page[@string='Products']/field[@name='move_lines']/form/group[1]/field[@name='name']" position="replace">
                </xpath>
                <xpath expr="/form/notebook/page[@string='Products']/field[@name='move_lines']/form/group[1]/field[@name='product_packaging']" position="before">
                    <field name="name" invisible="0" colspan="4" select="0" string="Description" />
                </xpath>
            </field>
        </record>

        <record id="view_picking_in_form_replace_name" model="ir.ui.view">
            <field name="name">stock.picking.in.form.replace_name</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page[@string='General Information']/field[@name='move_lines']/form/group[1]/field[@name='name']" position="replace">
                </xpath>
                <xpath expr="/form/notebook/page[@string='General Information']/field[@name='move_lines']/form/group[1]/field[@name='product_packaging']" position="before">
                    <field name="name" invisible="0" colspan="4" select="0" string="Description" />
                </xpath>
            </field>
        </record>

        <record id="view_picking_out_form_add_route" model="ir.ui.view">
            <field name="name">stock.picking.out.form.add_route</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="backorder_id" position="after">
                    <field name="route_id" on_change="onchange_route_id(route_id)"/>
                </field>
            </field>
        </record>

        <record id="view_picking_out_tree_add_route" model="ir.ui.view">
            <field name="name">stock.picking.out.tree.add_route</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_out_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="origin" position="before">
                    <field name="route_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="stock_picking_kanban">
            <field name="name">stock.picking.kanban</field>
            <field name="model">stock.picking</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban default_group_by="route_id">
                    <field name="name"/>
                    <field name="real_date"/>
                    <field name="address_id"/>
                    <field name="supplier_id"/>
                    <field name="carrier_id"/>
                    <field name="packages"/>
                    <field name="weight" sum="Total Peso Bruto"/>
                    <field name="weight_net"/>
                    <field name="volume"/>
                    <field name="color_stock"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <t t-set="color" t-value="kanban_color(record.color_stock.raw_value || record.state.raw_value)"/>
                            <div t-att-class="color">
                            <div class="oe_kanban_box oe_kanban_color_border">
                                <div class="oe_kanban_box_header oe_kanban_color_bgdark oe_kanban_color_border oe_kanban_draghandle">
                                    <table class="oe_kanban_table">
                                    <tr>
                                                <td class="oe_kanban_title1" align="left" valign="middle" tooltip="production_workcenter_line_details">
                                                    Fecha Real: <field name="real_date"/>
                                                </td>
                                    </tr>
                                    <tr>
                                        <td align="left" valign="middle" class="oe_kanban_title1" tooltip="production_workcenter_line_details">
                                            <field name="name"/> (<field name="state"/>)
                                        </td>

                                    </tr>
                                    </table>
                                </div>

                                     <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_box_show_onclick_trigger oe_kanban_color_border">
                                        <div>
                                            <b>
                                                Fecha de compromiso:
                                            </b>
                                            <field name="commitment_date"/>
                                        </div>
                                        <div>
                                            <b>
                                                Direcci√≥n:
                                            </b>
                                            <field name="address_id"/>
                                        </div>
                                        <div>
                                            <b>
                                                Proveedor:
                                            </b>
                                            <field name="supplier_id"/>
                                        </div>
                                        <div>
                                            <b>
                                                Transportista:
                                            </b>
                                            <field name="carrier_id" />
                                        </div>
                                        <div>
                                            <b>
                                               Bultos:
                                            </b>
                                             <field name="packages" />
                                             <b>
                                                 Volumen:
                                             </b>
                                             <field name="volume" />
                                        </div>
                                        <div>
                                            <b>
                                                Peso bruto:
                                            </b>
                                            <field name="weight" />
                                            <b>
                                                Peso neto:
                                            </b>
                                            <field name="weight_net" />

                                        </div>

                                    </div>

                                    <div class="oe_kanban_buttons_set oe_kanban_color_border oe_kanban_color_bglight oe_kanban_box_show_onclick">
                                        <div class="oe_kanban_left">
                                            <a string="Edit" icon="gtk-edit" type="edit"/>
                                        </div>

                                        <br class="oe_kanban_clear"/>
                                    </div>
                                </div>
                            </div>

                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="view_picking_planning_kanban_search" model="ir.ui.view">
            <field name="name">stock.picking.out.search</field>
            <field name="model">stock.picking</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Picking list">
                    <group>
                        <filter icon="terp-go-week" string="Today" name="today"
                        domain="[('real_date', '&lt;=', time.strftime('%%Y-%%m-%%d 23:59:59'))]"/>
                        <filter icon="terp-go-week" string="Today +2" name="todaytwo"
                        domain="[('real_date', '&lt;=', (datetime.date.today()+datetime.timedelta(days=2)).strftime('%%Y-%%m-%%d 00:00:00'))]"/>
                        <filter icon="terp-go-week" string="Today +5" name="todayfive"
                        domain="[('real_date', '&lt;=', (datetime.date.today()+datetime.timedelta(days=5)).strftime('%%Y-%%m-%%d 00:00:00'))]"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_picking_planning_kanban" model="ir.actions.act_window">
            <field name="name">Planning Delivery Orders</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('type','=','out')]</field>
            <field name="context">{'default_type': 'out', 'contact_display': 'partner_address', 'search_default_todaytwo':1}</field>
            <field name="search_view_id" ref="view_picking_planning_kanban_search"/>
        </record>
        <record id="action_picking_kanban_out_view1_waiting" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="stock_picking_kanban"/>
            <field name="act_window_id" ref="action_picking_planning_kanban"/>
        </record>
        <record id="action_picking_kanban_out_view1_waiting2" model="ir.actions.act_window.view">
            <field eval="3" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock.view_picking_form"/>
            <field name="act_window_id" ref="action_picking_planning_kanban"/>
        </record>
        <record id="action_picking_kanban_out_view1_waiting3" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock.view_picking_out_tree"/>
            <field name="act_window_id" ref="action_picking_planning_kanban"/>
        </record>

        <menuitem id="menu_planning_kanban_stock"
            name="Planning" action="action_picking_planning_kanban"
            parent="stock.menu_stock_warehouse_mgmt"/>

