<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_split_in_lots" model="ir.ui.view">
            <field name="name">Split in lots</field>
            <field name="model">stock.move.split</field>
            <field name="inherit_id" ref="stock.view_split_in_lots"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
            
	            <field name="qty" position="replace">
	                <field name="qty" string="Quantity" readonly="1"/>
	                <field name="qty_uos" string="Quantity (UoS)" readonly="1"/>
	            </field>
	            
	            <field name="product_uom" position="replace">
	                <field name="product_uom" string="UoM" readonly="1"/>
	                <field name="product_uos" string="UoS" readonly="1"/>
	            </field>
	            
                <xpath expr="//field[@name='line_ids']/tree/field[@name='quantity']" position="replace">
                    <field name="quantity"
                    	   string="Quantity" 
                    	   on_change="onchange_quantity(quantity, False, parent.qty, parent.qty_uos)" />
                    <field name="quantity_uos" 
                    	   string="Quantity (UoS)" 
                           on_change="onchange_quantity(False, quantity_uos, parent.qty, parent.qty_uos)" 
                           groups="product.group_uos" />
                </xpath>
                
                <xpath expr="//field[@name='line_ids']/form/field[@name='quantity']" position="replace">
                    <field name="quantity" 
                    	   string="Quantity" 
                           on_change="onchange_quantity(quantity, False, parent.qty, parent.qty_uos)" />
                    <field name="quantity_uos" 
                    	   string="Quantity (UoS)" 
                           on_change="onchange_quantity(False, quantity_uos, parent.qty, parent.qty_uos)" 
                           groups="product.group_uos" />
                </xpath>
                
                <xpath expr="//field[@name='line_exist_ids']/tree/field[@name='quantity']" position="replace">
                    <field name="quantity" 
                    	   string="Quantity" 
                           on_change="onchange_lot_id2(prodlot_id, quantity, parent.location_id, parent.product_id, parent.product_uom, parent.qty, parent.qty_uos)" />
                    <field name="quantity_uos" 
                    	   string="Quantity (UoS)" 
                           on_change="onchange_quantity(False, quantity_uos, parent.qty, parent.qty_uos)" 
                           groups="product.group_uos" />
                </xpath>
                
                <xpath expr="//field[@name='line_exist_ids']/form/field[@name='quantity']" position="replace">
                    <field name="quantity" 
                    	   string="Quantity" 
                           on_change="onchange_lot_id2(prodlot_id, quantity, parent.location_id, parent.product_id, parent.product_uom, parent.qty, parent.qty_uos)" />
                    <field name="quantity_uos" 
                    	   string="Quantity (UoS)" 
                           on_change="onchange_quantity(False, quantity_uos, parent.qty, parent.qty_uos)" 
                           groups="product.group_uos" />
                </xpath>

                <xpath expr="//field[@name='line_exist_ids']/tree/field[@name='prodlot_id']" position="replace">
                    <field name="prodlot_id" 
                           string="Lot number" 
                           domain="[('product_id','=',parent.product_id)]" 
                           on_change="onchange_lot_id2(prodlot_id, quantity, parent.location_id, parent.product_id, parent.product_uom, parent.qty, parent.qty_uos)"
                           context="{'product_id': parent.product_id}" />
                </xpath>
                
                <xpath expr="//field[@name='line_exist_ids']/form/field[@name='prodlot_id']" position="replace">
                    <field name="prodlot_id" 
                           string="Lot number" 
                           domain="[('product_id','=',parent.product_id)]" 
                           on_change="onchange_lot_id2(prodlot_id, quantity, parent.location_id, parent.product_id, parent.product_uom, parent.qty, parent.qty_uos)"
                           context="{'product_id': parent.product_id}" />
                </xpath>

            </field>
        </record>

	</data>
</openerp>
