<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
         <record id="view_stock_move_consume_package_wizard" model="ir.ui.view">
            <field name="name">stock.move.consume.view.package</field>
            <field name="model">stock.move.consume</field>
            <field name="inherit_id" ref="mrp.view_stock_move_consume_wizard"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='restrict_lot_id']" position="before">
                     <field name="move_id"/>
                     <field name="package_ids"/>
                    <field name="restrict_package_id" groups="stock.group_production_lot"
                            context="{'default_product_id': product_id}"/>
                 </xpath>

            </field>
        </record>
    </data>
</openerp>
