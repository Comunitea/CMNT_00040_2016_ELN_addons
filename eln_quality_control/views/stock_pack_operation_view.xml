<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>

        <record id="stock_pack_operation_view" model="ir.ui.view">
            <field name="name">stock.pack.operation.form</field>
            <field name="model">stock.pack.operation</field>
            <field name="type">form</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Packing Operation">
                    <sheet>
                        <group col="4">
                            <field name="product_id" readonly="1"/>
                            <field name="picking_id" readonly="1"/>
                            <field name="product_uom_id" readonly="1"/>
                            <field name="package_id" readonly="1"/>
                            <field name="lot_id" readonly="1"/>
                            <field name="result_package_id" readonly="1"/>
                            <field name="product_qty" readonly="1"/>
                            <field name="remaining_qty" readonly="1"/>
                            <field name="location_id" readonly="1"/>
                            <field name="qty_done" readonly="1"/>
                            <field name="location_dest_id" readonly="1"/>
                            <field name="owner_id" readonly="1"/>
                            <field name="date" readonly="1"/>
                            <field name="processed" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
