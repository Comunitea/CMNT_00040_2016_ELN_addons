<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
           
      <record id="reserve_transit_view_form" model="ir.ui.view">
        <field name="name">Reserve Transit Transfers</field>
        <field name="model">reserve.transit.wzd</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <div>
                    <p>It will reserve the transit transfers to reconcile negative quants when you do the transfer</p>
                </div>
                <footer>
                    <button name="reserve_transit" string="Reserve Transit" type="object" class="oe_highlight" icon="gtk-print"/>
                    <button special="cancel" string="Cancel" icon="gtk-close"/>
                </footer>
            </form>
        </field>
      </record>

      <record id="action_reserve_transit" model="ir.actions.act_window">
        <field name="name">Reserve Transit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">reserve.transit.wzd</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="reserve_transit_view_form"/>
        <field name="target">new</field>
      </record>

      <menuitem id="menu_reserve_transit" action="action_reserve_transit" name="Reserve Transit" parent="stock.menu_stock_sched" sequence="99"/>
      
    </data>
</openerp>