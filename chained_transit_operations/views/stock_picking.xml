        <record id="action_picking_planning_kanban_only_dest" model="ir.actions.act_window">
            <field name="name">Planning Delivery Orders</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="eln_custom.action_picking_planning_kanban"/>
            <field name="arch" type="xml">
