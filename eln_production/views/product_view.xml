<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
         <record id="view_normal_stock_property_form_add_field" model="ir.ui.view">
            <field name="name">product.normal.stock.form.inherit.add.field</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_template_property_form"/>
            <field name="arch" type="xml">
                <field name="virtual_available" position="after">
                    <field name="real_virtual_available"/>
                </field>
            </field>
         </record>

         <record id="product_product_tree_view_add_field" model="ir.ui.view">
            <field name="name">product.product.tree.add.field</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.view_stock_product_tree"/>
            <field name="type">tree</field>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
               <field name="virtual_available" position="after">
                   <field name="real_virtual_available"/>
               </field>
            </field>
        </record>

        <record id="view_product_form_expiry" model="ir.ui.view">
            <field name="name">product.normal.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product_expiry.view_product_form_expiry" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="alert_time" position="after">
                    <field name="extended_shelf_life_time" attrs="{'invisible': [('expected_use', '!=', 'raw')]}"/>
                    <field name="not_check_production_lot_date"/>
                </field>
            </field>
        </record>

        <record id="mrp.product_template_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="product.product_template_kanban_view"/>
            <field name="context">{"search_default_filter_to_sell":1}</field>
        </record>
    </data>
</openerp>
