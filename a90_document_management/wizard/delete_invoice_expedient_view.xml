<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

       <record id="view_delete_invoice_expedient_form" model="ir.ui.view">
            <field name="name">delete.invoice.expedient.form</field>
            <field name="model">delete.invoice.expedient</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Print final expedient">
                    <label colspan="4" string="Are you sure delete expedient of selected invoices?"/>
                    <group colspan="4" col="6">
                        <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button string='Delete' icon="gtk-execute" name="action_delete_expedient" type="object"/>
                    </group>
               </form>
            </field>
        </record>
        <act_window id="action_delete_expedient"
            multi="True"
            key2="client_action_multi" name="Delete expedient"
            res_model="delete.invoice.expedient" src_model="account.invoice"
            view_mode="form" target="new" view_type="form" />
    </data>
</openerp>
