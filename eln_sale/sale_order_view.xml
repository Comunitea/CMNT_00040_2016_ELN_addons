                <field name="name" position="after" >
                    <field name="origin" invisible="1"/>
                </field>
            </field>
        </record>
        <record id="view_sales_order_filter_add_origin" model="ir.ui.view">
            <field name="name">sale.order.list.select.add.origin</field>
