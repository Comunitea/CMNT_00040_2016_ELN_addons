<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="0">
    <!-- Multi - Company Rules -->

    <record model="ir.rule" id="crm_claim_comp_rule">
        <field name="name">CRM Claim multi-company</field>
        <field name="model_id" ref="model_crm_claim"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record model="ir.rule" id="crm_claim_line_comp_rule">
        <field name="name">CRM Claim Line multi-company</field>
        <field name="model_id" ref="model_claim_line"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

</data>
</openerp>
