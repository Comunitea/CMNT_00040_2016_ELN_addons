<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
  
        <record id="view_analysis_expedient_document_tree" model="ir.ui.view">
            <field name="name">expedient.analysis.tree</field>
            <field name="model">expedient.analysis</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Analysis document management">
                    <field name="model_name"/>
                    <field name="id" invisible="1"/>
                    <field name="expedient"/>
                    <field name="parent_expedient"/>
                    <field name="partner"/>
                    <field name="date_origin"/>
                    <field name="origin"/>
                    <field name="type"/>
                    <field name="group"/>
                    <field name="state_expedient"/>
                    
                    <field name="state_document"/>
                    <field name="annex"/>
                </tree>
            </field>
        </record> 
    
        <record id="view_analysis_expedient_document_search" model="ir.ui.view">
            <field name="name">expedient.analysis.search</field>
            <field name="model">expedient.analysis</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Analysis document management">
                    <group>
                        <field name="partner"/>
                        <field name="group"/>
                        <field name="state_expedient"/>
                        <field name="origin"/>
                        <field name="state_document"/>
                        <field name="annex"/>
                        <field name="parent_expedient"/>
                    </group>
                    <newline/>
                    <group expand="1" string="Group By...">
                        <filter icon="terp-accessories-archiver" string="Document"
                                context="{'group_by':'model_name'}"/>
                        <filter icon="terp-folder-blue" string="State document"
                                context="{'group_by':'state_document'}"/>
                        <filter icon="terp-folder-green" string="Group"
                                context="{'group_by':'group'}"/>
                        <filter icon="terp-folder-yellow" string="Partner"
                                context="{'group_by':'partner'}"/>
                        <filter icon="terp-folder-orange" string="Expedient"
                                context="{'group_by':'expedient'}"/>
                                <filter icon="terp-stock_symbol-selection" string="Parent Expedient"
                                context="{'group_by':'parent_expedient'}"/>
                    </group>
                </search>
            </field>
        </record>
    
        <record id="action_analysis_expedient" model="ir.actions.act_window">
            <field name="name">Analysis document management</field>
            <field name="res_model">expedient.analysis</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="view_analysis_expedient_document_search"/>
            <field name="view_id" ref="view_analysis_expedient_document_tree"/>
        </record>    
    
        <menuitem action="action_analysis_expedient" id="menu_analysis_document_expedient" parent="document_management.menu_expedient" sequence="2"/>
   

    </data>
</openerp>
