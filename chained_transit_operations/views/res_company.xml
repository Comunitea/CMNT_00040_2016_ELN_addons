<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_company_chained_transit" model="ir.ui.view">
            <field name="name">view.res.company.chained_transit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='account_grp']" position="after">
                    <group name="intercompany_settings" string="Intercompany settings">
                        <field name="intercompany_user_id"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>