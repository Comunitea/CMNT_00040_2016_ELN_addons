<openerp>
    <data>

        <record id="account_invoice_line_view_search" model="ir.ui.view">
            <field name="name">account.invoice.line.form</field>
            <field name="model">account.invoice.line</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                   <filter name="invoice" string="Invoice" context="{'group_by':'invoice_id'}"/>
                   <filter name="product" string="Product" context="{'group_by':'product_id'}"/>
               </search>
            </field>
        </record>

        <record id="supplier_invoice_line_action" model="ir.actions.act_window">
            <field name="name">Supplier Invoice lines</field>
            <field name="res_model">account.invoice.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="account_invoice_line_view_search"/>
            <field name="domain">[('invoice_type','in',('out_invoice', 'out_refund'))]</field>
            <field name="context">{'search_default_invoice': 1, 'search_default_product': 1}</field>
        </record>

        <menuitem parent="account.menu_finance_payables" action="supplier_invoice_line_action" id="supplier_invoice_line_menu"/>


        <record id="customer_invoice_line_action" model="ir.actions.act_window">
            <field name="name">Customer Invoice lines</field>
            <field name="res_model">account.invoice.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="account_invoice_line_view_search"/>
            <field name="domain">[('invoice_type','in',('in_invoice', 'in_refund'))]</field>
            <field name="context">{'search_default_invoice': 1, 'search_default_product': 1}</field>
        </record>

        <menuitem parent="account.menu_finance_receivables" action="customer_invoice_line_action" id="customer_invoice_line_menu"/>

    </data>
</openerp>
