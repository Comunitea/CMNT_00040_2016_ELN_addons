<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


  <template id="picking_list_report">
        <style type="text/css">
        #container{
            height: 100%;
            width:100%;
            position:relative;
            border-style: solid 1px;;
        }
        .tag-block{
            height: 20%;
            width: 42%;
            float: left;
            margin-top: 60px;
            margin-left: 50px;
            page-break-inside: avoid !important;
        }
        barcode-content{
            width: 100%;
            height: 80%
            display: table;
        }
        .bc-center{
            overflow: hidden;
            text-align:center;
            padding: 2px 0 0 0;
            margin: 0;
        }
    </style>

    <t t-foreach="docs" t-as="o">
            <div class="page">
                <table class="custom_table table_left" style="border-top: 1px solid black">
                     <thead>
                        <tr>
                            <td rowspan="3" class="col-xs-8">
                                Nombre
                            </td>
                            <td rowspan="3" class="col-xs-8">
                                Estado
                            </td>
                            <td rowspan="2" class="col-xs-8">
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div>
                                    <strong style="margin-left: 5px;">Albar√°n: </strong><span t-field="o.name"/>
                                </div>
                                <div class="barcode-content">
                                    <div class="bc-center">
                                        <t t-set="barcode" t-value="o.name"/>
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name,  920, 260)" style="width:460px;height:80px; margin-left: -45px;"/>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <strong style="margin-left: 5px;">Estado: </strong><span t-field="o.state"/>
                            </td>
                        </tr>
                     </tbody>
                </table>
                <table class="custom_table" style="margin-top: 20px;">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Lote</th>
                                    <th>Cantidad</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.pack_operation_ids" t-as="line">
                                    <td>
                                        <div>
                                            <p><t t-esc="line.product_id.name"/></p>
                                        </div>

                                        <div class="barcode-content">
                                            <div class="bc-center">
                                                <t t-set="barcode" t-value="line.product_id.ean13"/>
                                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', line.product_id.ean13,  920, 260)" style="width:460px;height:80px; margin-left: -45px;"/>
                                            </div>
                                        </div>
                                    </td>
                                    <td colspan="2">
                                        <table>
                                            <tr>
                                                <td>
                                                    <div>
                                                    <p><t t-esc="line.lot_id.name"/></p>
                                                </div>

                                                <div class="barcode-content">
                                                    <div class="bc-center">
                                                        <t t-set="barcode" t-value="line.lot_id.name"/>
                                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', line.lot_id.name,  920, 260)" style="width:460px;height:80px; margin-left: -45px;"/>
                                                    </div>
                                                </div>
                                                </td>
                                                <td>
                                                <div>
                                                    <p><t t-esc="line.product_qty"/><t t-esc="line.product_uom_id.name"/></p>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div t-if="line.location_id">
                                                    <p><t t-esc="line.location_id.name"/></p>
                                                </div>

                                                <div class="barcode-content"  t-if="line.location_id">
                                                    <div class="bc-center">
                                                        <t t-set="barcode" t-value="line.location_id.name"/>
                                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', line.location_id.loc_barcode, 920, 260)" style="width:230px;height:40px; margin-left: -45px;"/>
                                                    </div>
                                                </div>
                                            </td>

                                            <td>
                                                <div t-if="line.location_dest_id">
                                                    <p><t t-esc="line.location_dest_id.name"/></p>
                                                </div>

                                                <div class="barcode-content"  t-if="line.location_dest_id">
                                                    <div class="bc-center">
                                                        <t t-set="barcode" t-value="line.location_dest_id.name"/>
                                                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', line.location_dest_id.loc_barcode,  920, 260)" style="width:230px;height:40px; margin-left: -45px;"/>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        </table>
                                    </td>

                                </tr>
                            </tbody>

                </table>
            </div>
    </t>

    </template>
    </data>
</openerp>