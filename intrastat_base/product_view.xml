<openerp>
<data>

<!-- Add field on product.product view -->
<record id="intrastat_base_product_normal_form" model="ir.ui.view">
    <field name="name">intrastat.base.product.normal.form</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="account.product_normal_form_view" />
    <field name="arch" type="xml">
        <data>
            <field name="property_account_expense" position="after">
                <separator string="Intrastat properties" colspan="4"/>
                <group colspan="4">
                    <field name="intrastat_id"/>
                    <field name="exclude_from_intrastat" />
                </group>
            </field>
        </data>
    </field>
</record>

<!-- Same on product.template view -->
<record id="intrastat_base_product_template_form" model="ir.ui.view">
    <field name="name">intrastat.base.product.template.form</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="account.product_template_form_view"/>
    <field name="arch" type="xml">
        <data>
            <field name="property_account_expense" position="after">
                <separator string="Intrastat properties" colspan="4"/>
                <group colspan="4">
                    <field name="intrastat_id"/>
                    <field name="exclude_from_intrastat" />
                </group>
            </field>
        </data>
    </field>
</record>

  <!--  
    Completed by Noviat (http://www.noviat.be/)
  -->

  <!-- Same on product.category view -->
  <record id="intrastat_product_category_form_view" model="ir.ui.view">
    <field name="name">product.category.form</field>
    <field name="model">product.category</field>
    <field name="inherit_id" ref="product.product_category_form_view"/>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <field name="type" position="after">
        <field name="intrastat_id"/>
      </field>
    </field>
  </record>

  <!-- Menu entry for Intrastat Code configuration -->
  <record id="view_intrastat_code_list" model="ir.ui.view">
    <field name="name">report.intrastat.code.list</field>
    <field name="model">report.intrastat.code</field>
    <field name="type">tree</field>
    <field name="arch" type="xml">
      <tree string="Intrastat Codes">
        <field name="intrastat_code"/>
        <field name="description"/>
        <field name="intrastat_uom_id"/>
        <field name="name"/>
      </tree>
    </field>
  </record>
  <record id="intrastat_code_action" model="ir.actions.act_window">
    <field name="name">Intrastat Codes</field>
    <field name="res_model">report.intrastat.code</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_intrastat_code_list"/>
  </record>
  <menuitem id="menu_intrastat_product_config" name="Intrastat Codes" parent="product.prod_config_main" action="intrastat_code_action" sequence="16"/>

</data>
</openerp>
