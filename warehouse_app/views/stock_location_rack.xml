<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_location_rack_tree" model="ir.ui.view">
            <field name="name">stock.location.rack.tree</field>
            <field name="model">stock.location.rack</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="sequence" widget="handle"/>

                    <field name="name"/>
                    <field name="code"/>
                    <field name="x_number"/>
                    <field name="y_number"/>
                    <field name="z_number"/>
                    <field name="index"/>
                    <field name="rotation"/>
                    <button name="update_rack_loc_ids" class="oe_stat_button"
                          type="object"
                            groups="stock.group_stock_user"

                            icon="gtk-refresh" help="Create(update) asociated locations"/>
                    <field name="warehouse_id"/>
                    <field name="parent_id"/>



                </tree>
            </field>
        </record>



        <record id="location_order_action_view" model="ir.actions.act_window">
            <field name="name">Rack</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.location.rack</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new location order.
                </p>
            </field>
        </record>
        <menuitem action="location_order_action_view" id="menu_location_order_action_view" parent="stock.menu_stock_config_settings" sequence="10"/>
    </data>
</openerp>