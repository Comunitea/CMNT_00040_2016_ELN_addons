<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <template id="product_tag_report">
        <style type="text/css">
        #container{
            height: 100%;
            width:100%;
            position:relative;
            border-style: solid 1px;;
        }
        .tag-block{
            height: 20%;
            width: 42%;
            float: left;
            margin-top: 60px;
            margin-left: 50px;
            page-break-inside: avoid !important;
        }
        barcode-content{
            width: 100%;
            height: 80%
            display: table;
        }
        .bc-center{
            overflow: hidden;
            text-align:center;
            padding: 2px 0 0 0;
            margin: 0;
        }
    </style>

    <t t-foreach="docs" t-as="o">
            <div class="page">
                <div id="container">
                    <div class="tag-block">
                        <p><t t-esc="o.name"/></p>  
                    </div>

                    <div class="barcode-content">
                        <div class="bc-center">
                            <t t-set="barcode" t-value="o.barcode"/>
                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', barcode, 920, 260)" style="width:460px;height:80px; margin-left: -45px;"/>
                            <p class="text-center" t-esc="barcode"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    </data>
</openerp>
