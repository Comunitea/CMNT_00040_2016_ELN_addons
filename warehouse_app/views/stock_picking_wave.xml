<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_picking_wave_inherit_form_warehouse_app" model="ir.ui.view">
            <field name="name">stock.picking.wave.form.inherit</field>
            <field name="model">stock.picking.wave</field>
            <field name="inherit_id" ref="stock_picking_wave.view_picking_wave_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='done']" position="after">
                    <button name="process_stop" string="Detener" type="object" states="in_progress"/>
                    <button name="process_start" string="Iniciar" type="object" states="ready"/>
                    <button name="picking_int_ids_done" string="Transferir picking" type="object" states="in_progress"/>
                </xpath>

                <xpath expr="//sheet" position="inside">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                    </xpath>
                <xpath expr="//div[@class='oe_right oe_button_box']" position="inside">
                    <button name="send_wave_to_pda" type="object"
                            context="{'force_user': True}"
                            string="Send wave to PDA"
                            groups="stock.group_stock_user"
                            states="draft"
                            help="Send to pda"/>
                </xpath>
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">ready,in_progress,done</attribute>
                </xpath>
                <xpath expr="//field[@name='state']" position="after">
                    <!--field name="picking_state" widget="statusbar"
                                  statusbar_visible="waiting,confirmed,assigned,done"
                           statusbar_colors="{'draft':'red','confirmed': 'red', 'waiting':'red','assigned':'green','done':'blue'}"/-->
                </xpath>

                <xpath expr="//group/field[@name='user_id']" position="replace">
                        <group>
                            <label for="user_id" />
                                <div>
                                    <field name="user_id" class="oe_inline"/>
                                </div>
                            <field name="location_id"/>
                            <field name="location_dest_id"/>
                        </group>
                        <group>
                            <field name="min_date"/>
                            <field name="picking_type_id"/>

                        </group>


                </xpath>
                <xpath expr="//separator" position="replace">
                </xpath>
                <xpath expr="//field[@name='picking_ids']" position="replace">

                    <notebook>
                        <page string ="Info wave">
                            <group>
                                <group>
                                    <field name="hide_done"/>
                                    <field name="multicompany"/>
                                    <field name="chained"/>
                                </group>
                                <group>
                                    <field name="remaining_ops"/>
                                    <field name="pack_operation_count"/>
                                    <field name="pack_operation_exist"/>
                                </group>
                            </group>

                        </page>
                        <page string="Albaranes asociados">
                            <header><field align="right" name="picking_state" widget="statusbar"
                                  statusbar_visible="waiting,confirmed,assigned,done"
                           statusbar_colors="{'draft':'red','confirmed': 'red', 'waiting':'red','assigned':'green','done':'blue'}"/></header>
                            <field name="picking_ids" widget="many2many" options="{'not_delete': True}">
                            <tree colors="green:state == 'done';gray:state in ('cancel','draft')">
                                <field name="company_id"/>
                                <field name="name"/>
                                <field name="location_id"/>
                                <field name="location_dest_id"/>
                                <field name="origin"/>
                                <field name="state"/>
                                <field name="pack_operation_exist"/>
                                <button name="pda_do_prepare_partial" string="Do prepare partial" type="object" icon="fa-check text-success" attrs="{'invisible': ['|', ('pack_operation_exist','=', True), ('state', 'not in', ('partially_available', 'assigned'))]}"/>
                                <button name="pda_action_assign" string="Assign picking" type="object" icon="fa-check text-success" attrs="{'invisible': [('state', 'not in', ('confirmed', 'partially_available'))]}"/>
                                <button name="pda_force_assign"  string="Force availability" type="object" icon="fa-arrow-right text-success" attrs="{'invisible': [('state', 'not in', ('partially_available', 'waiting'))]}" groups="stock.group_stock_manager"/>
                                <button name="pda_do_unreserve" string="Do unreserve" type="object" icon="fa-times-circle text-danger" attrs="{'invisible': [('state', 'not in', ('assigned', 'partially_available'))]}"/>
                                <button name="pda_action_cancel" string="Cancel picking" type="object" icon="fa-times-circle text-danger" attrs="{'invisible': [('state', 'not in', ('draft', 'confirmed', 'waiting'))]}"/>
                            </tree>
                        </field>
                        </page>
                        <page string="Albaranes de picking">
                            <header><field align="right" name="picking_state" widget="statusbar"
                                  statusbar_visible="waiting,confirmed,assigned,done"
                           statusbar_colors="{'draft':'red','confirmed': 'red', 'waiting':'red','assigned':'green','done':'blue'}"/></header>
                            <field name="picking_int_ids" widget="many2many" options="{'not_delete': True}">
                            <tree colors="green:state == 'done';gray:state in ('cancel','draft')">
                                <field name="company_id"/>
                                <field name="name"/>
                                <field name="backorder_id"/>
                                <field name="origin"/>
                                <field name="min_date"/>
                                <field name="state"/>
                                <field name="pack_operation_exist"/>
                                <button name="pda_do_prepare_partial" string="Do prepare partial" type="object" icon="fa-check text-success" attrs="{'invisible': ['|', ('pack_operation_exist','=', True), ('state', 'not in', ('partially_available', 'assigned'))]}"/>
                                <button name="pda_action_assign" string="Assign picking" type="object" icon="fa-check text-success" attrs="{'invisible': [('state', 'not in', ('confirmed', 'partially_available'))]}"/>
                                <button name="pda_force_assign"  string="Force availability" type="object" icon="fa-arrow-right text-success" attrs="{'invisible': [('state', 'not in', ('partially_available', 'waiting'))]}" groups="stock.group_stock_manager"/>
                                <button name="pda_do_unreserve" string="Do unreserve" type="object" icon="fa-times-circle text-danger" attrs="{'invisible': [('state', 'not in', ('assigned', 'partially_available'))]}"/>
                                <button name="pda_action_cancel" string="Cancel picking" type="object" icon="fa-times-circle text-danger" attrs="{'invisible': [('state', 'not in', ('draft', 'confirmed', 'waiting'))]}"/>
                            </tree>
                        </field>
                        </page>

                        <!--page string="Albaranes asociados">
                            <field name="picking_ids" widget="many2many" options="{'not_delete': True}">
                                <tree colors="green:state == 'done';gray:state in ('cancel','draft')">
                                    <field name="company_id"/>
                                    <field name="name"/>
                                    <field name="backorder_id"/>
                                    <field name="origin"/>
                                    <field name="min_date"/>
                                    <field name="state"/>
                                    <field name="pack_operation_exist"/>
                                    <button name="pda_do_prepare_partial" string="Do prepare partial" type="object" icon="fa-check text-success" attrs="{'invisible': ['|', ('state', '!=', 'assigned'), ('pack_operation_exist','=',True)]}"/>
                                <button name="pda_action_assign" string="Assign picking" type="object" icon="fa-check text-success" attrs="{'invisible': [('state', 'not in', ('confirmed', 'patially_available'))]}"/>
                                <button name="pda_force_assign"  string="Force availability" type="object" icon="fa-arrow-right text-success" attrs="{'invisible': [('state', 'not in', ('partially_available', 'waiting'))]}" groups="stock.group_stock_manager"/>
                                <button name="pda_action_cancel" string="Cancel picking" type="object" icon="fa-times-circle text-danger" attrs="{'invisible': [('state', 'in', ('done', 'cancel'))]}"/>
                                </tree>
                            </field>
                        </page-->

                         <!--page string="Grouped Operations">
                            <field name="group_pack_operation_ids">
                                <tree decoration-success = "pda_done">
                                    <field name="picking_order" readonly="1"/>
                                    <field name="pda_product_id" readonly="1"/>
                                    <field name="product_qty" readonly="1"/>
                                    <field name="qty_done" readonly="1"/>
                                    <field name="product_uom_id" readonly="1" groups="product.group_uom"/>
                                    <field name="pda_done" readonly="1"/>
                                    <field name="package_id" groups="stock.group_tracking_lot" readonly="1" invisible="1"/>
                                    <field name="lot_id" readonly="1"/>
                                    <field name="location_id" readonly="1"/>
                                    <field name="location_dest_id" readonly="1"/>
                                    <field name="result_package_id" groups="stock.group_tracking_lot" readonly="1"/>
                                    <button name="set_group_pda_done" class="oe_stat_button" type="object" groups="stock.group_stock_user"
                                            attributes="{'invisible': [('state','!=',('in_progress'))]}" icon="gtk-apply" help="Set all group as done"/>

                                </tree>
                            </field>
                        </page-->
                        <page string="Picking pack operations">
                            <field name="pack_operation_ids">
                                <tree colors="green:pda_done == True">
                                    <field name="picking_id"/>
                                    <field name="loc_row"/>
                                    <!--field name="picking_order"/-->
                                    <field name="package_id" groups="stock.group_tracking_lot" readonly="1" invisible="1"/>
                                    <field name="pda_product_id" required="1" readonly="1"/>
                                    <field name="lot_id" readonly="1"/>
                                    <field name="product_qty" readonly="1"/>
                                    <field name="qty_done"/>
                                    <field name="product_uom_id" readonly="1" groups="product.group_uom"/>
                                    <field name="pda_done"/>
                                    <field name="owner_id" groups="stock.group_tracking_owner" readonly="1"/>
                                    <field name="location_id" domain="[('id', 'child_of', parent.location_id)]" readonly="1"/>
                                    <!--field name="location_dest_id" domain="[('id', 'child_of', parent.location_dest_id)]" readonly="1"/-->
                                    <field name="result_package_id" groups="stock.group_tracking_lot" context="{'default_location_id': location_dest_id}" readonly="1"/>
                                    <button name="set_pda_done" class="oe_stat_button" type="object" groups="stock.group_stock_user"
                                            attributes="{'invisible': [('state','!=',('in_progress'))], 'icon': }" icon="gtk-apply" help="Set as pda done"/>

                                </tree>
                            </field>
                        </page>
                         <!--page string="Asociated pack operations">
                            <field name="pack_operation_out_ids">
                                <tree colors="green:pda_done == True">
                                    <field name="picking_id"/>
                                    <field name="loc_row"/>
                                    <field name="picking_order"/>
                                    <field name="package_id" groups="stock.group_tracking_lot" readonly="1" invisible="1"/>
                                    <field name="pda_product_id" required="1" readonly="1"/>
                                    <field name="lot_id" readonly="1"/>
                                    <field name="product_qty" readonly="1"/>
                                    <field name="qty_done"/>
                                    <field name="product_uom_id" readonly="1" groups="product.group_uom"/>
                                    <field name="pda_done"/>
                                    <field name="owner_id" groups="stock.group_tracking_owner" readonly="1"/>
                                    <field name="location_id" domain="[('id', 'child_of', parent.location_id)]" readonly="1"/>
                                    <field name="location_dest_id" domain="[('id', 'child_of', parent.location_dest_id)]" readonly="1"/>
                                    <field name="result_package_id" groups="stock.group_tracking_lot" context="{'default_location_id': location_dest_id}" readonly="1"/>
                                    <button name="set_pda_done" class="oe_stat_button" type="object" groups="stock.group_stock_user"
                                            attributes="{'invisible': [('state','!=',('in_progress'))], 'icon': }" icon="gtk-apply" help="Set as pda done"/>
                                </tree>
                            </field>
                        </page-->
                    </notebook>

                </xpath>
        </field>
        </record>

         <record id="view_picking_wave_tree_warehouse_app" model="ir.ui.view">
            <field name="name">picking.wave.tree.app</field>
            <field name="model">stock.picking.wave</field>
            <field name="inherit_id" ref="stock_picking_wave.view_picking_wave_tree"/>
            <field name="arch" type="xml">
