<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
    
        <record id="sale_order_confirm_view" model="ir.ui.view">
            <field name="name">sale.order.confirm.form</field>
            <field name="model">sale.order.confirm</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Confirm Draft Sales Orders">
                <separator string="Confirm Draft Sales Orders" colspan="4"/>
                    <group colspan="4" col="6">
                        <button icon="gtk-cancel" special="cancel" string="Close"/>
                        <button icon="terp-camera_test" string="Confirm Sales Orders" name="sale_order_confirm" type="object" default_focus="1"/>
                   </group>
            </form>
            </field>
        </record>
        
        <act_window id="action_sale_order_confirm"
            multi="True"
            key2="client_action_multi" name="Confirm Draft Sales Orders"
            res_model="sale.order.confirm" src_model="sale.order"
            view_mode="form" target="new" view_type="form" />
            
    </data>
</openerp>
