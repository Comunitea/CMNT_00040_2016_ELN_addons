<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>

        <record id="view_order_form" model="ir.ui.view">
            <field name="name">view.elnsale.sale.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
            
                <field name="product_uos_qty" position="replace">
                    <field groups="product.group_uos" name="product_uos_qty"
                        on_change="product_uos_change(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, 'es_ES', False, parent.date_order)"/>
                </field>
                
                <xpath expr="//notebook/page[@string='Sales Order']/field[@name='order_line']/form[@string='Sales Order Lines']/notebook/page/group/field[@name='product_uos']" position="replace">
                    <field groups="product.group_uos" name="product_uos" 
                        on_change="product_uom_change(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, False, False, parent.date_order, context)"
                    nolabel="1" />
                </xpath>
                
                <field name="client_order_ref" position="after">
                    <field name="supplier_id"/>
                </field>

                <field name="shop_id" position="before">
                    <field name="supplier_cip"/>
                </field>
                
                <field name="shop_id" position="replace">
                    <field name="shop_id" on_change="onchange_shop_id2(shop_id, partner_id)" required="1" select="1"/>
                </field>
                
                <field name="project_id" position="replace">
                    <field name="project_id" required="1" context="{'partner_id':partner_id, 'contact_id':partner_order_id, 'pricelist_id':pricelist_id, 'default_name':name}" groups="analytic.group_analytic_accounting" domain="[('type','&lt;&gt;','view'), ('company_id', '=', company_id), ('parent_id', '!=', False)]"/>
                </field>

            </field>
        </record>

        <record id="view_order_agent_form_inherit" model="ir.ui.view">
            <field name="name">sale.agent.order.inherit.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_commission.view_order_agent_form_inherit"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <!-- Esta vista heredada de sale_commission (product_id) no es necesaria porque no aporta ningún cambio en este momento
                     pero la dejamos ya que estamos verificando el onchange del producto para ver si funciona bien y podría ser necesario 
                     cambiar algo. Si finalmente no presenta problemas se puede eliminar. -->
                <field name="product_id" position="replace">
                    <field colspan="3"
                        context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'shop':parent.shop_id, 'uom':product_uom, 'force_product_uom': True,'order_id': parent.id,'sale_agent_ids': parent.sale_agent_ids}" 
                        name="product_id"
                        on_change="product_id_change2(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, False, True, parent.date_order, product_packaging, parent.fiscal_position, False, parent.sale_agent_ids, context)"/>
                </field>
                
            </field>
        </record>
            
        <record id="view_order_form_change_partner_onchange3" model="ir.ui.view">
            <field name="name">sale.order.form.change_partner_onchange3</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale_early_payment_discount.view_order_form_change_partner_onchange"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="replace">
                     <field colspan="2" name="partner_id" options='{"quick_create": false}' on_change="onchange_partner_id3(partner_id, early_payment_discount, payment_term, shop_id)" domain="[('customer','=',True)]" context="{'search_default_customer':1}" required="1"/>
                </field>
            </field>
        </record>

        <record id="view_sales_order_filter" model="ir.ui.view">
            <field name="name">sale.order.list.select</field>
            <field name="model">sale.order</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter" />
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <filter icon="terp-check" string="Direct Invoicing" domain="[('shop_id.indirect_invoicing','=',False)]"/>
                    <filter icon="terp-check" string="Indirect Invoicing" domain="[('shop_id.indirect_invoicing','=',True)]"/>
                    <newline/>
	                <field name="name" filter_domain="['|', ('name','ilike',self),('client_order_ref','ilike',self)]"/>
                </field>
            </field>
        </record>

        <record id="view_sale_orderfor" model="ir.ui.view">
            <field name="name">sale.order.form.inherit5</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale_order_dates.view_sale_orderfor"/>
            <field name="arch" type="xml">
                <field name="date_order" position="replace"/>
                <field name="commitment_date" position="replace"/>
                <field name="shipped" position="replace"/>
                <field name="invoiced" position="replace">
                    <group col="4" colspan="2">
                        <field name="date_order"/>
                        <field name="invoiced"/>
                        <field name="commitment_date"/>
                        <field name="shipped"/>
                    </group>
                </field>
            </field>
        </record>

        <!--  Cambio la vista de pedido de venta para que las direcciones estén a una columna y no a dos -->
        <record id="view_order_form_change_partner_address_position" model="ir.ui.view">
            <field name="name">sale.order.form.change_partner_address_position</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="view_order_form_change_partner_onchange3"/>
            <field name="arch" type="xml">
                <field name="partner_order_id" position="replace"/>
                <field name="partner_invoice_id" position="replace"/>
                <field name="partner_shipping_id" position="replace"/>
                <field name="pricelist_id" position="replace"/>
                <field name="partner_id" position="replace">
                    <group col="4" colspan="4">
                        <field colspan="2" name="partner_id" options='{"quick_create": false}' on_change="onchange_partner_id3(partner_id, early_payment_discount, payment_term, shop_id)" domain="[('customer','=',True)]" context="{'search_default_customer':1}" required="1"/>
                        <field colspan="2" domain="[('type','=','sale')]" name="pricelist_id"  on_change="onchange_pricelist_id(pricelist_id,order_line)"/>
                        <field colspan="4" domain="[('partner_id','=',partner_id)]" name="partner_order_id" on_change="onchange_partner_order_id(partner_order_id, partner_invoice_id, partner_shipping_id)" options='{"quick_create": false}'  context="{'default_partner_id':partner_id}"/>
                        <field colspan="4" domain="[('partner_id','=',partner_id)]" name="partner_invoice_id"  options='{"quick_create": false}' context="{'default_partner_id':partner_id}"/>
                        <field colspan="4" domain="[('partner_id','=',partner_id)]" name="partner_shipping_id"  options='{"quick_create": false}' context="{'default_partner_id':partner_id}"/>
                    </group>
                </field>

                <field name="project_id" position="replace"/>
                <field name="invoice_quantity" position="after">
	                <separator string="Contabilidad" colspan="2"/>
                    	<field name="project_id" required="1" context="{'partner_id':partner_id, 'contact_id':partner_order_id, 'pricelist_id':pricelist_id, 'default_name':name}" groups="analytic.group_analytic_accounting" domain="[('type','&lt;&gt;','view'), ('company_id', '=', company_id), ('parent_id', '!=', False)]"/>
                </field>
            </field>
        </record>


        <record id="view_order_form_add_early_payment_disc_total" model="ir.ui.view">
            <field name="name">sale.order.form.add_early_payment_disc_total</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_early_payment_discount.view_order_form_add_early_payment_disc_total"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="amount_untaxed" position="before">
                    <label string="" colspan="3"/>
                </field>
                <field name="early_payment_disc_untaxed" position="replace"/>
                <field name="early_payment_disc_tax" position="replace"/>
                <field name="early_payment_disc_total" position="replace"/>
                <field name="amount_total" position="after">
                    <newline/>
                    <label string="" colspan="3"/>
                    <field name="early_payment_disc_untaxed"/>
                    <field name="early_payment_disc_tax"/>
                    <field name="early_payment_disc_total"/>
                </field>
            </field>
        </record>
        
        <!--  Modify menu: Billing - Deliveries to invoice - Set "view_id" form to stock.view_picking_form, etc. -->
        <record id="action_outgoing_picking_list_to_invoice_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock.view_picking_out_tree"/>
            <field name="act_window_id" ref="sale.outgoing_picking_list_to_invoice"/>
        </record>
        <record id="action_outgoing_picking_list_to_invoice_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock.view_picking_form"/>
            <field name="act_window_id" ref="sale.outgoing_picking_list_to_invoice"/>
        </record>
        <record id="action_outgoing_picking_list_to_invoice_view2_cal" model="ir.actions.act_window.view">
            <field eval="3" name="sequence"/>
            <field name="view_mode">calendar</field>
            <field name="act_window_id" ref="sale.outgoing_picking_list_to_invoice"/>
        </record>

    </data>
</openerp>
