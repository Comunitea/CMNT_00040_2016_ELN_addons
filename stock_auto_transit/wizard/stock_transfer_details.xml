<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_stock_enter_transfer_details" model="ir.ui.view">
            <field name="model">stock.transfer_details</field>
            <field name="inherit_id" ref="stock.view_stock_enter_transfer_details"/>
            <field name="arch" type="xml">
                <field name="picking_destination_location_id" position="after">
                    <field name="auto_transit" invisible="1"/>
                </field>  
                <group string="Products To Move" position="inside">
                    <div attrs="{'invisible': [('auto_transit', '=', False)]}">
                        <p style="color: red" >IMPORTANT: TRANSIT TRANSFER</p>
                        <p style="color: red">The quantity and lot where proposed to reconciliate the negative quants in the final
                        destination location.</p>
                    </div>
                </group>
                <xpath expr="//field[@name='item_ids']/tree/field[@name='product_id']" position="before">
                    <field name="from_negative_quant" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='item_ids']/tree" position="attributes">
                    <attribute name="colors">red:from_negative_quant == True</attribute>
                </xpath>
            </field>
        </record>


    </data>
</openerp>
