<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

         <record id="view_stock_move_scrap_wizard_add_prodlot" model="ir.ui.view">
            <field name="name">Scrap Move Prodlot</field>
            <field name="model">stock.move.scrap</field>
            <field name="inherit_id" ref="stock.view_stock_move_scrap_wizard"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="location_id" position="after">
                    <field name="track_production" invisible="1"/>
                    <field name="prodlot_id" colspan="4" attrs="{'required': [('track_production', '=', True)]}"/>
                </field>
            </field>
        </record>
        
    </data>
</openerp>