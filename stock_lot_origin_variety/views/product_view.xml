<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.common.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="list_price" position="after">
                    <field name="origin_country_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}" />
                    <field name="variety" />
                </field>
                <group name="packaging" position="before">
                    <group name="origin_variety" string="Origin/Variety" attrs="{'invisible':[('type','=','service')]}">
                        <field name="origin_country_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}" />
                        <field name="variety" />
                    </group>
                </group>
            </field>
        </record>

    </data>
</openerp>
