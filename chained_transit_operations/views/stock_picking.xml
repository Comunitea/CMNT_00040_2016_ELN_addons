<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

         <record id="view_stock_enter_transfer_details_warehouse_app" model="ir.ui.view">
            <field name="name">Enter transfer details</field>
            <field name="model">stock.transfer_details</field>
            <field name="inherit_id" ref="stock.view_stock_enter_transfer_details"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='do_detailed_transfer']" position="before">
                    <button name="do_detailed_transfer" string="_Apply Lots/packages" type="object" class="oe_highlight" context="{'no_transfer': True}" invisible="1"/>
                </xpath>

            </field>
        </record>

         <record id="view_picking_inherit_form_warehouse_app" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <div class="oe_right oe_button_box" position="inside">
                    <button class="oe_stat_button"
                            name="run_asociated_procurements"
                            icon="fa-credit-card"
                            type="object"
                            string="Run Procurements">
                    </button>
                </div>
                <xpath expr="//group[@string='General Informations']" position="after">
                    <group name = "Related Pickings">
                        <group string="Prev Picks" >
                            <field name="pick_orig" nolabel="1" invisible="1"/>
                            <field name="pick_orig_ids" nolabel="1" attrs="{'invisible': [('pick_orig', '=', False)]}" >
                                <tree colors="green:state == 'done';gray:state in ('cancel','draft')">
                                    <field name="company_id"/>
                                    <field name="name"/>
                                    <field name="origin"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Next Picks" >
                            <field name="pick_dest" nolabel="1" invisible="1"/>
                            <field name="pick_dest_ids" nolabel="1" attrs="{'invisible': [('pick_dest', '=', False)]}">
                                <tree colors="green:state == 'done';gray:state in ('cancel','draft')">
                                    <field name="company_id"/>
                                    <field name="name"/>
                                    <field name="origin"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                        <!--group  attrs="{'invisible': [('pick_orig', '=', True), ('pick_dest', '=', True)]}">
                            <h2>Relleno </h2>
                        </group-->
                    </group>
                </xpath>



